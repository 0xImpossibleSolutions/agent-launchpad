{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/server.js"
    },
    {
      "src": "/deploy",
      "dest": "/server.js"
    },
    {
      "src": "/tokens",
      "dest": "/server.js"
    },
    {
      "src": "/tokens/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/stats",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
